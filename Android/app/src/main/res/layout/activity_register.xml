<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffffff"
            android:text="버S킹"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30dp"
            android:gravity="center"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorMainLight"
                    android:text="MY BUSKING"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/img_hiphop"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="15dp"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="팀 이름을 적어주세요."
                            android:textSize="14dp"/>

                        <EditText
                            android:id="@+id/et_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="버스킹을 간단히 설명해주세요."
                            android:textSize="12dp"
                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:scrollbars="vertical"/>

                    </LinearLayout>



                </LinearLayout>

                <!-- line -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="23dp"
                        android:text="장르"
                        android:paddingRight="10dp"
                        android:textColor="#000000"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_centerInParent="true"
                        android:background="#000000"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_genre1"
                        android:layout_width="64dp"
                        android:layout_height="40dp"
                        android:background="@drawable/img_round_red_trans"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="노래"
                        android:textColor="@color/colorMainGrayText"/>

                    <Button
                        android:id="@+id/btn_genre2"
                        android:layout_width="64dp"
                        android:layout_height="40dp"
                        android:background="@drawable/img_round_yellow_trans"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="춤"
                        android:textColor="@color/colorMainGrayText"/>

                    <Button
                        android:id="@+id/btn_genre3"
                        android:layout_width="64dp"
                        android:layout_height="40dp"
                        android:background="@drawable/img_round_blue_trans"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="퍼포먼스"
                        android:textColor="@color/colorMainGrayText"/>

                    <Button
                        android:id="@+id/btn_genre4"
                        android:layout_width="64dp"
                        android:layout_height="40dp"
                        android:background="@drawable/img_round_purple_trans"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="기타"
                        android:textColor="@color/colorMainGrayText"/>
                    

                </LinearLayout>

                <!-- line -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="23dp"
                        android:text="정보"
                        android:paddingRight="10dp"
                        android:textColor="#000000"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_centerInParent="true"
                        android:background="#000000"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <!-- choose location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- choice location -->
                    <LinearLayout
                        android:id="@+id/choose_location"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorMainDark"
                        android:orientation="horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="위치 선택"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_arrow"
                            />

                    </LinearLayout>

                    <!-- text location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_except_up"
                        android:orientation="horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="위치를 선택해주세요!"
                            android:gravity="center|left"
                            android:textColor="@color/colorMainGrayText"/>


                    </LinearLayout>

                </LinearLayout>

                <!-- blank -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp">

                </RelativeLayout>

                <!-- choose date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- choice location -->
                    <LinearLayout
                        android:id="@+id/choose_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorMainDark"
                        android:orientation="horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="날짜 선택"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_arrow"
                            />

                    </LinearLayout>

                    <!-- choice location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_except_up"
                        android:orientation="horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="날짜를 선택해 주세요!"
                            android:gravity="center|left"
                            android:textColor="@color/colorMainGrayText"
                            />




                    </LinearLayout>

                </LinearLayout>

                <!-- blank -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp">

                </RelativeLayout>

                <!-- choose time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- choose time -->
                    <LinearLayout
                        android:id="@+id/choose_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorMainDark"
                        android:orientation="horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="시간 선택"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </RelativeLayout>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_arrow"
                            />

                    </LinearLayout>

                    <!-- choice location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_except_up"
                        android:orientation="horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="시간를 선택해 주세요!"
                            android:gravity="center|left"
                            android:textColor="@color/colorMainGrayText"/>



                    </LinearLayout>

                </LinearLayout>

                <!-- line -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="23dp"
                        android:text="내용"
                        android:paddingRight="10dp"
                        android:textColor="#000000"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_centerInParent="true"
                        android:background="#000000"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/colorLightGray"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:scrollbars="vertical"/>

                <Button
                    android:id="@+id/btn_register"
                    android:background="@drawable/border_round_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="등록"/>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>











</RelativeLayout>